<!-- This file is generated by buildout -->
<build
    xmlns:python="http://bitten.edgewall.org/tools/python"
    xmlns:svn="http://bitten.edgewall.org/tools/svn"
    xmlns:c="http://bitten.edgewall.org/tools/c"
    xmlns:sh="http://bitten.edgewall.org/tools/sh"
    >

    <step id="checkout"> 
        <svn:checkout url="file:///${svn:repo}" path="trunk/southtut" /> 
    </step>

    <step id="bootstrap"> 
        <python:exec file="bootstrap.py" args="-d" />
    </step>

    <step id="buildout"> 
        <sh:exec executable="bin/buildout" /> 
    </step>

    <step id="pep8"> 
        <!-- bin/ci is just a Python interpreter with CI packages in sys.path e.g. pep8 -->
        <sh:exec executable="bin/ci" args="${buildout:directory}/ci-pep8.py" />
    </step>

    <step id="syncdb"> 
        <!-- bin/ci is just a Python interpreter with CI packages in sys.path e.g. pep8 -->
        <sh:exec executable="bin/ci" args="${buildout:directory}/ci-syncdb.py" />
    </step>

    <step id="syncdb"> 
        <sh:exec executable="${buildout:directory}/ci-syncdb.sh" />
    </step>

</build>
